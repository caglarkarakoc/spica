{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "baseUrl": "./",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@spica-client/core": [
        "../../dist/spica-client/core"
      ],
      "@spica-client/core/*": [
        "../../dist/spica-client/core/*"
      ],
      "@spica-client/common": [
        "../../dist/spica-client/common"
      ],
      "@spica-client/common/*": [
        "../../dist/spica-client/common/*"
      ],
      "@spica-client/material": [
        "../../dist/spica-client/material"
      ],
      "@spica-client/material/*": [
        "../../dist/spica-client/material/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
